{
  "name": "backend",
  "version": "1.0.0",
  "scripts": {
    "start": "nodemon --config nodemon.json",
    "debug": "nodemon --config nodemon-debug.json",
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "tsc": "tsc || echo TSC compilation has errors.",
    "tslint": "tslint -c tslint.json -p tsconfig.json -t codeFrame",
    "setup-pm2": "npm install -g pm2 && pm2 install pm2-logrotate",
    "start:staging": "npm run build && npm run setup-pm2 && pm2 delete all; NODE_ENV=staging pm2 start dist/index.js --node-args='--max-old-space-size=1768' --log-date-format 'DD-MM HH:mm:ss.SSS' --log ./output.log && tail -f /dev/null",
    "start:production": "npm run build && npm run setup-pm2; NODE_ENV=production pm2 start dist/index.js --node-args='--max-old-space-size=1768' --log-date-format 'DD-MM HH:mm:ss.SSS' --log ./output.log && tail -f /dev/null",
    "start:preproduction": "npm run build && NODE_ENV=production node dist/index.js --node-args='--max-old-space-size=1768' --log-date-format 'DD-MM HH:mm:ss.SSS' --log ./output.log && tail -f /dev/null",
    "unit": "NODE_ENV=jest jest --config test/unit/jest.conf.js --coverage",
    "test": "npm run unit"
  },
  "dependencies": {
    "@types/http-status": "0.2.30",
    "@types/optimist": "0.0.29",
    "abi-decoder": "^1.2.0",
    "aws-sdk": "^2.245.1",
    "axios": "^0.19.0",
    "bcrypt": "^2.0",
    "bignumber.js": "^9.0.0",
    "bitcoinjs-lib": "^5.0.5",
    "body-parser": "1.18.2",
    "coininfo": "^5.1.0",
    "coinkey": "^3.0.0",
    "compression": "^1.7.3",
    "connect-mongo": "^2.0.1",
    "connect-redis": "^3.3.3",
    "connect-timeout": "1.7.0",
    "cookie-parser": "1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.4",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^4.0.0",
    "ethereumjs-tx": "1.3.4",
    "express": "4.16.0",
    "express-fileupload": "^0.4.0",
    "express-jwt": "^5.3.0",
    "express-session": "^1.15.6",
    "fs-extra": "5.0.0",
    "helmet": "3.9.0",
    "http-status": "1.0.1",
    "js-md5": "^0.7.3",
    "lodash": "4.17.10",
    "mailgun-js": "^0.18.0",
    "moment": "^2.22.1",
    "mongoose": "^5.1.0",
    "mongoose-plugin-autoinc": "^1.1.9",
    "morgan": "^1.9.0",
    "newrelic": "^4.8.0",
    "node-cron": "^2.0.3",
    "node-fetch": "^2.5.0",
    "querystring": "^0.2.0",
    "redis": "^2.8.0",
    "request": "^2.88.0",
    "request-ip": "^2.1.3",
    "request-promise": "^4.2.4",
    "rollbar": "^2.5.0",
    "s3": "^4.4.0",
    "socket.io": "^2.2.0",
    "solidity-sha3": "^0.4.1",
    "trongrid": "^1.2.1",
    "tronweb": "^2.6.4",
    "typescript": "^3.5.3",
    "uuid": "^3.2.1",
    "validator": "^10.2.0",
    "web3": "1.0.0-beta.36"
  },
  "devDependencies": {
    "@types/chai": "4.0.6",
    "@types/connect-timeout": "^0.0.33",
    "@types/cucumber": "2.1.0",
    "@types/dotenv": "^4.0.1",
    "@types/express": "4.0.39",
    "@types/helmet": "0.0.37",
    "@types/jest": "^22.2.3",
    "@types/js-yaml": "3.10.1",
    "@types/lodash": "4.14.116",
    "@types/mongoose": "^5.0.13",
    "chai": "^4.1.2",
    "jest": "^23.6.0",
    "nodemon": "1.12.7",
    "sinon": "^1.17.6",
    "ts-jest": "^22.4.6",
    "ts-node": "3.3.0",
    "tslint": "5.8.0"
  },
  "engines": {
    "node": ">=9.10.0"
  }
}
